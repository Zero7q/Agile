@model Agile.Models.ViewModels.SysRoleViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_EditLayout.cshtml";
}
@Html.HiddenFor(s => s.Id)
@Html.HiddenFor(s => s.CreateTime)
@Html.HiddenFor(s => s.UpdateTime)
<div class="layui-row">
    <div class="layui-col-sm12">
        <div class="layui-form-item">
            <label class="layui-form-label">@Html.DisplayNameFor(s => s.RoleName)：</label>
            <div class="layui-input-block">
                @Html.TextBoxFor(s => s.RoleName, new { @class = "layui-input", @placeholder = $"请输入{Html.DisplayNameFor(s => s.RoleName)}" })
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">@Html.DisplayNameFor(s => s.Remark)：</label>
            <div class="layui-input-block">
                @Html.TextAreaFor(s => s.Remark, new { @class = "layui-textarea", @placeholder = $"请输入{Html.DisplayNameFor(s => s.Remark)}" })
            </div>
        </div>
    </div>
</div>
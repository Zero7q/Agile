@model Agile.Models.ViewModels.SysRoleViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_EditLayout.cshtml";
}
@Html.HiddenFor(s => s.Id)
@Html.HiddenFor(s => s.CreateTime)
@Html.HiddenFor(s => s.UpdateTime)
<div class="layui-row">
    <div class="layui-col-sm12">
        <div class="layui-form-item">
            <label class="layui-form-label">@Html.DisplayNameFor(s => s.RoleName)：</label>
            <div class="layui-input-block">
                @Html.TextBoxFor(s => s.RoleName, new { @class = "layui-input", @placeholder = $"请输入{Html.DisplayNameFor(s => s.RoleName)}" })
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">@Html.DisplayNameFor(s => s.Remark)：</label>
            <div class="layui-input-block">
                @Html.TextAreaFor(s => s.Remark, new { @class = "layui-textarea", @placeholder = $"请输入{Html.DisplayNameFor(s => s.Remark)}" })
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        layui.use(['layer', 'form', 'admin', 'treeTable', 'util', 'xmSelect'], function () {
            var $ = layui.jquery;
            var layer = layui.layer;
            var form = layui.form;

            //debugger;

            //监听提交
            form.on('submit(layuiadmin-app-form-submit)', function (data) {
                var field = data.field; //获取提交的字段
                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                debugger;
                $.ajax({
                    url: '/admin/role/edit',
                    type: 'post',
                    data: field,
                    beforeSend: function () {
                        layer.msg('正在处理，请稍候。。。', { icon: 16, time: 60000, shade: [0.5, '#000', true] })
                    },
                    success: function (res) {
                        debugger;
                        console.log(res);
                        if (res.code == 300) {
                            window.location.href = res.data;
                        }
                        else if (res.code == 0) {
                            layer.msg(res.msg, { icon: 1 });
                            setTimeout(function () {
                                parent.layui.table.reload('agileTable'); //重载表格
                                parent.layer.close(index); //再执行关闭
                            }, 1000);
                        }
                        else {
                            layer.alert(res.msg, { icon: 2 });
                            isSubmit = false;
                        }
                    },
                    error: function (res) {
                        layer.alert("请求发生未知错误！", { icon: 2 });
                        isSubmit = false;
                    }
                })
            });
        });
    </script>
}
